<Window x:Class="AIPrototypeAssetRepair.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Asset Repair AI Demo" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row 0: Buttons -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1: Event Info -->
            <RowDefinition Height="2*"/>
            <!-- Row 2: Prompt -->
            <RowDefinition Height="2*"/>
            <!-- Row 3: Output -->
            <RowDefinition Height="*"/>
            <!-- Row 4: Lists -->
        </Grid.RowDefinitions>

        <!-- Row 0: Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10" Grid.Row="0">
            <Button x:Name="btnRankContractors" Content="Rank Contractors" Width="150" Margin="0,0,10,0" Click="btnRankContractors_Click"/>
            <Button x:Name="btnGeneratePrompt" Content="Generate Prompt" Width="150" Margin="0,0,10,0" Click="btnGeneratePrompt_Click"/>
            <Button x:Name="btnRunAI" Content="Run AI" Width="150" Margin="0,0,10,0" Click="btnRunAI_Click" IsEnabled="False"/>
            <Button x:Name="btnBack" Content="← Back" Width="80" Margin="10,0,0,0" Click="btnBack_Click"/>
            <Button x:Name="btnForward" Content="Forward →" Width="80" Margin="5,0,0,0" Click="btnForward_Click"/>
        </StackPanel>

        <!-- Row 1: Event Info -->
        <GroupBox Header="Current Repair Event" Grid.Row="1" Margin="0,0,0,10">
            <TextBlock x:Name="txtCurrentEventInfo" TextWrapping="Wrap" Padding="5"/>
        </GroupBox>

        <!-- Row 2: Prompt Text -->
        <TextBox x:Name="txtPrompt" Grid.Row="2" TextWrapping="Wrap" AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                 Margin="0,0,0,10" />

        <!-- Row 3: Output Text -->
        <TextBox x:Name="txtOutput" Grid.Row="3" TextWrapping="Wrap" AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                 Margin="0,0,0,10" />

        <!-- Row 4: Contractor Ranking Panel -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Ranked Contractors" Margin="0,0,10,0">
                <ListBox x:Name="lstRankedContractors" 
                         DisplayMemberPath="DisplayText"
                         SelectionChanged="lstRankedContractors_SelectionChanged"/>
            </GroupBox>

            <GroupBox Header="Matching Repair Logs" Grid.Column="1">
                <ListBox x:Name="lstContractorLogs" 
                         DisplayMemberPath="Notes" />
            </GroupBox>
        </Grid>
    </Grid>
</Window>
